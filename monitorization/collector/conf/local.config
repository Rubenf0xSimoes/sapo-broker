<?xml version="1.0"?>
<global-config>
  <domain>
	<peer>
      <ip>127.0.0.1</ip>
      <port>3315</port>
    </peer>
    <peer>
      <ip>127.0.0.1</ip>
      <port>3415</port>
    </peer>
  </domain>
  <!-- Message related configuration -->
  <messages>
    <max-msg-size>262144</max-msg-size>
    <!-- Maximum message size -->
    <queues>
      <max-queues>500</max-queues>
      <!-- Maximum number of queues -->
      <store-time>604800000</store-time>
      <!-- Maximum time a message is kept by the agent: 1 week -->
    </queues>
    <topic>
      <max-distinct-subscriptions>500</max-distinct-subscriptions>
      <!-- Maximum number of distinct subscriptions -->
    </topic>
  </messages>
</global-config>

