<?xml version="1.0"?>
<xs:schema elementFormDefault="qualified" attributeFormDefault="unqualified" targetNamespace="http://softwarelivre.sapo.pt/broker/securityPolicies" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:bs="http://softwarelivre.sapo.pt/broker/securityPolicies">

	<xs:complexType name="Condition">
		<xs:sequence>			
			<xs:element minOccurs="0" name="role" type="xs:string" />
			<xs:element minOccurs="0" name="channel-type">
				<xs:simpleType>
				  <xs:restriction base="xs:string">
					<xs:enumeration value="CONFIDENTIALITY"/>
					<xs:enumeration value="INTEGRITY"/>
					<xs:enumeration value="AUTHENTICITY"/>
				  </xs:restriction>
				</xs:simpleType>
			</xs:element>
			<xs:element minOccurs="0" name="address">
			  <xs:complexType>
				<xs:simpleContent>
				  <xs:extension base="xs:string">
					<xs:attribute name="mask" type="xs:unsignedByte" use="optional" />
				  </xs:extension>
				</xs:simpleContent>
			  </xs:complexType>
			</xs:element>
			<xs:element minOccurs="0" maxOccurs="unbounded" name="condition" type="bs:Condition" />
		</xs:sequence>
		<xs:attribute name="condition-type" use="required">
			<xs:simpleType>
				  <xs:restriction base="xs:string">
					<xs:enumeration value="ROLE"/>
					<xs:enumeration value="CHANNELTYPE"/>
					<xs:enumeration value="ADDRESS"/>
					<xs:enumeration value="AND"/>
				  </xs:restriction>
			</xs:simpleType>
		</xs:attribute>
	</xs:complexType>
	
	<xs:simpleType name="Privilege">
		<xs:restriction base="xs:string">
		 <xs:enumeration value="READ"/>
		 <xs:enumeration value="WRITE"/>
	    </xs:restriction>
	</xs:simpleType>
	<xs:simpleType name="DestinationType">
		<xs:restriction base="xs:string">
		 <xs:enumeration value="TOPIC"/>
		 <xs:enumeration value="QUEUE"/>
		 <xs:enumeration value="TOPIC_AS_QUEUE"/>
	    </xs:restriction>
	</xs:simpleType>
	<xs:simpleType name="Authorization">
	   <xs:restriction base="xs:string">
		 <xs:enumeration value="PERMIT"/>
		 <xs:enumeration value="DENY"/>
	   </xs:restriction>
    </xs:simpleType>
	
	<xs:complexType name="Policies">
	  <xs:sequence>
		<xs:element maxOccurs="unbounded" name="policy">
		  <xs:complexType>
			<xs:sequence>
			  <xs:element name="acl">
				<xs:complexType>
				  <xs:sequence>
					<xs:element maxOccurs="unbounded" name="entry">
						<xs:complexType>
							<xs:sequence>
								<xs:element maxOccurs="unbounded" name="condition" type="bs:Condition" />
							</xs:sequence>
							<xs:attribute name="action" use="required" type="bs:Authorization" />
							<xs:attribute name="destination-type"  use="required">
								<xs:simpleType>
								  <xs:list itemType="bs:DestinationType" />
								</xs:simpleType>
							</xs:attribute>
							<xs:attribute name="destination" type="xs:string" use="required" />							
							<xs:attribute name="privilege" use="required" type="bs:Privilege" />
					  </xs:complexType>
					</xs:element>
				  </xs:sequence>
				</xs:complexType>
			  </xs:element>
			</xs:sequence>
			<xs:attribute name="policy-name" type="xs:string" use="required" />
			<xs:attribute name="inherits" type="xs:string" use="optional" />
		  </xs:complexType>
		</xs:element>
	  </xs:sequence>
	</xs:complexType>
	
	<xs:complexType name="Agents"> 
      <xs:sequence>
        <xs:element maxOccurs="unbounded" name="agent">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="agent-policy">
                <xs:complexType>
                  <xs:attribute name="policy-name" type="xs:string" use="required" />
                </xs:complexType>
              </xs:element>
            </xs:sequence>
            <xs:attribute name="agent-name" type="xs:string" use="required" />
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
	
	<xs:complexType name="BrokerSecurityPolicy">
	  <xs:sequence>
		<xs:element name="policies" type="bs:Policies" />
		<xs:element minOccurs="0" maxOccurs="unbounded" name="agents" type="bs:Agents" />
	  </xs:sequence>
	</xs:complexType>
</xs:schema>